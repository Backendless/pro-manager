{
  "workload": {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "annotations": {
        "name": "bl-mongo"
      },
      "name": "bl-mongo"
    },
    "spec": {
      "progressDeadlineSeconds": 60,
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "bl-mongo"
        }
      },
      "strategy": {
        "rollingUpdate": {
          "maxSurge": 1,
          "maxUnavailable": 0
        },
        "type": "RollingUpdate"
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "bl-mongo"
          }
        },
        "spec": {
          "containers": [
            {
              "args": [

              ],
              "image": "mongo:5",
              "imagePullPolicy": "IfNotPresent",
              "name": "bl-mongo",
              "ports": [
                {
                  "containerPort": 27017,
                  "name": "bl-mongo",
                  "protocol": "TCP"
                }
              ],
              "volumeMounts": [
                {
                  "mountPath": "/data/db",
                  "name": "data"
                }
              ]
            }
          ],
          "restartPolicy": "Always",
          "volumes": [

          ]
        }
      }
    }
  },
  "service": {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "bl-mongo",
      "labels": {
        "app": "bl-mongo"
      }
    },
    "spec": {
      "type": "NodePort",
      "ports": [
        {
          "port": 27017,
          "targetPort": 27017,
          "name": "bl-mongo",
          "nodePort": 32017
        }
      ],
      "selector": {
        "app": "bl-mongo"
      }
    }
  }
}