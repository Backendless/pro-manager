{
  "workload": {
    "apiVersion": "apps/v1",
    "kind": "StatefulSet",
    "metadata": {
      "annotations": {
        "name": "bl-redis"
      },
      "name": "bl-redis"
    },
    "spec": {
      "progressDeadlineSeconds": 60,
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "bl-redis"
        }
      },
      "strategy": {
        "rollingUpdate": {
          "maxSurge": 1,
          "maxUnavailable": 0
        },
        "type": "RollingUpdate"
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "bl-redis"
          }
        },
        "spec": {
          "containers": [
            {
              "args": [
                "redis-server",
                "--logfile /var/log/redis/redis.log",
                "--appendonly",
                "yes"
              ],
              "image": "redis:6",
              "imagePullPolicy": "IfNotPresent",
              "name": "bl-redis",
              "ports": [
                {
                  "containerPort": 6379,
                  "name": "bl-redis",
                  "protocol": "TCP"
                }
              ],
              "volumeMounts": [
                {
                  "mountPath": "/data",
                  "name": "data"
                }
              ]
            }
          ],
          "restartPolicy": "Always",
          "volumes": [

          ]
        }
      }
    }
  },
  "service": {
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
      "name": "bl-redis",
      "labels": {
        "app": "bl-redis"
      }
    },
    "spec": {
      "type": "NodePort",
      "ports": [
        {
          "port": 6379,
          "targetPort": 6379,
          "name": "bl-redis",
          "nodePort": 32379
        }
      ],
      "selector": {
        "app": "bl-redis"
      }
    }
  }
}